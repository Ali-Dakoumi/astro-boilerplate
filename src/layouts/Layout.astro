---
import Script from '../components/Script.astro'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="flex min-h-screen items-center justify-center bg-gradient-to-r from-teal-800 to-gray-300 font-sans text-white"
	>
		<slot />
		<Script />
	</body>
</html>
<style is:global>
	body {
	}
</style>
